<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_splash_dhbc"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="vertical"
       android:layout_weight="9">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_height="wrap_content">

           <ImageView
               app:layout_constraintBottom_toBottomOf="parent"
               android:id="@+id/imageView"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:src="@drawable/ic_mainmenu_topbar"
               app:layout_constraintEnd_toEndOf="parent" />

           <TextView
               android:textColor="@color/blue"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="44"
               android:fontFamily="sans-serif-medium"
               android:textSize="48dp"
               app:layout_constraintBottom_toBottomOf="@+id/imageView"
               app:layout_constraintEnd_toEndOf="@+id/imageView"
               app:layout_constraintStart_toStartOf="@+id/imageView"
               app:layout_constraintTop_toTopOf="@+id/imageView" />
       </androidx.constraintlayout.widget.ConstraintLayout>

       <ImageView
           android:id="@+id/bt_play"
           android:layout_marginTop="200dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:src="@drawable/ic_btn_play"
           android:layout_height="wrap_content"/>
       <ImageView
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           android:src="@drawable/ic_btn_ruby"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_btn_sound_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_btn_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>